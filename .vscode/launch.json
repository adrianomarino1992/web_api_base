    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "dist index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\dist\\temp\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "degub some test file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": ["jest", "./__tests__/${fileBasename}"],
            "console": "integratedTerminal", 
            "internalConsoleOptions": "neverOpen"
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "degub temp aplication index file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "node",
            "runtimeArgs": ["./dist/temp/index.js", "--debug"],
            "console": "integratedTerminal", 
            "internalConsoleOptions": "neverOpen"
        }
    ]
}