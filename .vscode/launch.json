    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "dist index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["--dark"],
            "program": "${workspaceFolder}\\dist\\temp\\index.js",
            "env": {
              "DEBUG": true
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }, 
        
        {
            "name": "DEBUG test file",
            "type": "node",
            "request": "launch",
            "env": {
              "NODE_ENV": "test"
            },
            "args": [              
              "--colors",
              "--config=${workspaceFolder}/jest.config.js",
              "--runInBand",
              "./__tests__/${fileBasename}"
            ],
            "runtimeArgs": [
              "--nolazy"
            ],
            "windows": {
              "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            },
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
          }    
        
    ]
}